{
  "name": "CropChain Final Stable Environment",

  // This is the key. We use a standard, pre-built image that is known to be correct.
  // It includes Node.js, Docker, and Docker Compose, all correctly configured.
  "image": "mcr.microsoft.com/devcontainers/javascript-node:18-bullseye",

  // This feature enables Docker-in-Docker the correct and stable way.
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },

  // This keeps the container running so we can work inside it.
  "overrideCommand": false
}