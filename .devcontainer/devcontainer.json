{
  "name": "CropChain Dev Environment",
  "dockerComposeFile": [
    "../docker-compose.yml"
  ],
  "service": "app",
  "workspaceFolder": "/workspace",
  // This command is now simple: just install dependencies.
  "postCreateCommand": "npm install && cd ui && npm install && npm run build && cd ..",
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "golang.go",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  "forwardPorts": [
    3000
  ],
  "remoteUser": "node"
}
