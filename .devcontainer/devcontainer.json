{
  "name": "CropChain Stable Environment",
  // This builds a single, simple container from the Dockerfile.
  "build": {
    "dockerfile": "../Dockerfile"
  },
  // This feature adds the Docker tools (docker, docker-compose) to our environment.
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  // Basic VS Code extensions
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode",
        "golang.go",
        "ms-azuretools.vscode-docker"
      ]
    }
  },
  // We are NOT running any commands on startup. We will do it manually.
  "remoteUser": "node"
}
